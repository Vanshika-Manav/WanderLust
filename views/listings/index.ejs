<% layout("/layouts/boilerplate") %>
<body>
  <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
    <% for(let listings of result){ %>
    <a href="/listings/<%= listings._id %>" class="allListing">
      <div class="card col listing-card">
        <img
          src="<%= listings.image %>"
          class="card-img-top"
          alt="Searching"
          style="height: 20rem"
        />
        <div class="card-img-overlay"></div>
        <div class="card-body">
          <p class="card-text">
            <b><%= listings.title %></b> <br />
            <p>&#8377; <%= listings.price.toLocaleString("en-IN") %> / night</p>
          </p>
        </div>
      </div>
    </a>
    <% } %>
  </div>
</body>
